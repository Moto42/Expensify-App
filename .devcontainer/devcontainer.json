{
    "name": "Expensify DevContainer",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "../"
    },
    "mounts": [
        // anonymous volume so node_modules stuff doesn't get installed directly on the host
        {"target": "${containerWorkspaceFolder}/node_modules", "type": "volume"}
        // There are a number of logs, reports and other generated files that this could also be done with.
    ],
    "onCreateCommand": "npm install && npm run setup-https"
}